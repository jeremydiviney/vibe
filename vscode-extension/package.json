{
  "name": "vibe-language",
  "displayName": "Vibe Language",
  "description": "Language support for Vibe - AI agent orchestration language",
  "version": "0.0.1",
  "publisher": "vibe",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "activationEvents": [
    "onLanguage:vibe"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "vibe",
        "aliases": [
          "Vibe",
          "vibe"
        ],
        "extensions": [
          ".vibe"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "vibe",
        "scopeName": "source.vibe",
        "path": "./syntaxes/vibe.tmLanguage.json",
        "embeddedLanguages": {
          "meta.embedded.block.typescript": "typescript"
        }
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "bun run build",
    "build": "bun build src/extension.ts --outfile=out/extension.js --target=node --format=cjs --external=vscode && bun build src/server.ts --outfile=out/server.js --target=node --format=cjs",
    "watch": "bun build src/extension.ts --outfile=out/extension.js --target=node --format=cjs --external=vscode --watch & bun build src/server.ts --outfile=out/server.js --target=node --format=cjs --watch",
    "compile": "tsc -p ./",
    "lint": "eslint src --ext ts",
    "test": "bun test src/test/",
    "test:syntax": "bunx vscode-tmgrammar-test -g syntaxes/vibe.tmLanguage.json src/test/syntax/*.vibe",
    "test:all": "bun run test && bun run test:syntax"
  },
  "dependencies": {
    "typescript": "^5.3.0",
    "vscode-languageclient": "^9.0.1",
    "vscode-languageserver": "^9.0.1",
    "vscode-languageserver-textdocument": "^1.0.11",
    "vscode-uri": "^3.0.8"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/vscode": "^1.85.0",
    "vscode-tmgrammar-test": "^0.1.3"
  }
}
