{
  "name": "vibe-monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "Vibe language monorepo - AI agent orchestration language",
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "start": "bun run --cwd packages/runtime src/index.ts",
    "dev": "bun --watch --cwd packages/runtime src/index.ts",
    "test": "bun test packages/runtime/src/",
    "test:watch": "bun test --watch packages/runtime/src/",
    "test:integration": "bun test packages/runtime/tests/integration/ --timeout 120000",
    "test:all": "bun test packages/runtime/src/ packages/runtime/tests/integration/ --timeout 120000",
    "test:extension": "bun test packages/vscode-extension/src/test/",
    "build:binaries": "bun run scripts/build.ts",
    "publish:npm": "bun run scripts/publish.ts",
    "build:extension": "bun run --cwd packages/vscode-extension build",
    "version": "bun scripts/version.ts",
    "version:patch": "bun scripts/version.ts patch",
    "version:minor": "bun scripts/version.ts minor",
    "version:major": "bun scripts/version.ts major"
  },
  "keywords": ["ai", "agent", "orchestration", "dsl", "language"],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/bun": "latest"
  }
}
